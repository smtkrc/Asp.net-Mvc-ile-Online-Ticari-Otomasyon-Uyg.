@using MVCOnlineTicariOtomasyon.Models.Sınıflar;
@model List<Cariler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    body {
        background-color: darkgray
    }
</style>
<br />
<h2>Cari Listesi</h2>
<table id="tbl3" style="background-color: dimgray" class="table table-bordered">
    <thead>
        <tr>
            <th style="color:white" width="60px" height="4px">CARİ ID</th>
            <th style="color:white">Cari Ad-Soyad</th>
            <th style="color:white">Cari Şehir</th>
            <th style="color:white">Cari Mail</th>
            <th style="color:white" width="50px">Sil</th>
            <th style="color:white" width="50px">Güncelle</th>
            <th style="color:white" width="120px">Detaylar</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
<tr>
    <td style="color:black">
        @x.CariID
    </td>
    <td style="color:black">
        @x.CariAD @x.CariSoyad
    </td>
    <td style="color:black">
        @x.CariSehir
    </td>
    <td style="color:black">
        @x.CariMail
    </td>
    <td style="color:white"><a href="/Cari/CariSil/@x.CariID" class="btn btn-danger">Sil</a></td>
    <td style="color:white"><a href="/Cari/CariGetir/@x.CariID" class="btn btn-warning">Güncelle</a></td>
    <td style="color:white"><a href="/Cari/MusteriSatis/@x.CariID" class="btn btn-default" style="background-color:lightcoral;color:white">Detay getir</a></td>
</tr>
    }
</table>
<a href="/Cari/CariEkle" class="btn btn-primary">Cari Ekle</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl3').dataTable();
</script>
