@using MVCOnlineTicariOtomasyon.Models.Sınıflar;
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    body {
        background-color: darkgray
    }
</style>
<br />
<h2>Fatura Listesi</h2>
<table id="tbl3" style="background-color: dimgray" class="table table-bordered">
    <thead>
        <tr>
            <th style="color:white">SERİ/SIRA NO</th>
            <th style="color:white">VERGİ DAİRESİ</th>
            <th style="color:white">TARİH</th>
            <th style="color:white">SAAT</th>
            <th style="color:white">TOPLAM</th>
            <th style="color:white">TESLİM EDEN</th>
            <th style="color:white">TESLİM ALAN</th>
            <th style="color:white">GÜNCELLE</th>
            <th style="color:white" width="50px">Detaylar</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
<tr>
    <td style="color:black">
        @x.FaturaSeriNo @x.FaturaSıraNo
    </td>
    <td style="color:black">
        @x.VergiDairesi
    </td>
    <td style="color:black">
        @x.FaturaTarih
    </td>
    <td style="color:black">
        @x.Saat
    </td>
    <td style="color:black">
        100
    </td>
    <td style="color:black">
        @x.TeslimEden
    </td>
    <td style="color:black">
        @x.TeslimAlan
    </td>

    <td><a href="/Fatura/FaturaGetir/@x.FaturaID" class="btn btn-warning" style="color:white">Güncelle</a></td>

    <td style="color:white"><a href="/Fatura/FaturaDetay/@x.FaturaID" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
</tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-primary">Yeni Fatura Giriş</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl3').dataTable();
</script>





