@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    body {
        background-color: darkgray
    }
</style>
<br />
<h2>Personel Listesi</h2>
<table id="tbl5" style="background-color: dimgray" class="table table-bordered">
    <thead>
        <tr>
            <th style="color:white" width="60px" height="4px">ID</th>
            <th style="color:white">Görsel</th>
            <th style="color:white">Personel Ad</th>
            <th style="color:white"> Personel Soyad</th>
            <th style="color:white">Departman</th>
            <th style="color:white" width="50px">Sil</th>
            <th style="color:white" width="50px">Güncelle</th>
            <th style="color:white" width="120px">Satışlar</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
<tr>
    <td style="color:black">
        @x.PersonelID
    </td>
    <td style="color:black">
        <img src="@x.PersonelGorsel" style="width:100px;height:80px" />
    </td>
    <td style="color:black">
        @x.PersonelAd
    </td>
    <td style="color:black">
        @x.PersonelSoyad
    </td>
    <td style="color:black">
        @x.Departman.DepartmanAD
    </td>

    <td style="color:white"><a href="/Personel/PersonelSil/@x.PersonelID" class="btn btn-danger">Sil</a></td>
    <td style="color:white"><a href="/Personel/PersonelGetir/@x.PersonelID" class="btn btn-warning">Güncelle</a></td>
    <td style="color:white"><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-default" style="background-color:lightcoral;color:white">Satışları Getir</a></td>
</tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Personel Ekle</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl5').dataTable();
</script>
