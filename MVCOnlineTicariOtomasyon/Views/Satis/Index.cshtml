@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    body {
        background-color: darkgray
    }
</style>
<br />
<h2>Satış Listesi</h2>
<table id="tbl6" style="background-color: dimgray" class="table table-bordered">
    <thead>
        <tr>
            <th style="color:white" width="60px" height="4px">ID</th>
            <th style="color:white">Ürün</th>
            <th style="color:white">Cari</th>
            <th style="color:white">Personel</th>
            <th style="color:white">Adet</th>
            <th style="color:white">Fiyat</th>
            <th style="color:white">Toplam</th>
            <th style="color:white">Tarih</th>
            <th style="color:white" width="50px">Sil</th>
            <th style="color:white" width="50px">Güncelle</th>
            <th style="color:white" width="120px">Detaylar</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
<tr>
    <td style="color:black">
        @x.SatisID
    </td>
    <td style="color:black">
        @x.Urun.UrunAd
    </td>
    <td style="color:black">
        @x.Cariler.CariAD @x.Cariler.CariSoyad
    </td>
    <td style="color:black">
        @x.Personel.PersonelAd @x.Personel.PersonelSoyad
    </td>
    <td style="color:black">
        @x.Adet
    </td>
    <td style="color:black">
        @x.Fiyat
    </td>
    <td style="color:black">
        @x.ToplamTutar
    </td>
    <td style="color:black">
        @x.Tarih
    </td>

    <td style="color:white"><a href="/Satis/SatisSil/@x.SatisID" class="btn btn-danger">Sil</a></td>
    <td style="color:white"><a href="/Satis/SatisGetir/@x.SatisID" class="btn btn-warning">Güncelle</a></td>
    <td style="color:white"><a href="/Satis/SatisDetay/@x.SatisID" class="btn btn-default" style="background-color:lightcoral;color:white">Satışları Getir</a></td>
</tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl6').dataTable();
</script>

