@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    body {
        background-color: darkgray
    }
</style>
<br />
<h2>Departman Listesi</h2>
<table id="tbl3" style="background-color: dimgray" class="table table-bordered">
    <thead>
        <tr>
            <th style="color:white" width="60px" height="4px">ID</th>
            <th style="color:white">Departman Adı</th>
            <th style="color:white" width="50px">Sil</th>
            <th style="color:white" width="50px">Güncelle</th>
            <th style="color:white" width="50px">Detaylar</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td style="color:black">
                @x.DepartmanID
            </td>
            <td style="color:black">
                @x.DepartmanAD
            </td>
            <td style="color:white"><a href="/Departman/DepartmanSil/@x.DepartmanID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/@x.DepartmanID" class="btn btn-warning" style="color:white">Güncelle</a></td>

            <td style="color:white"><a href="/Departman/DepartmanDetay/@x.DepartmanID" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-primary">Departman Ekle</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl3').dataTable();
</script>



