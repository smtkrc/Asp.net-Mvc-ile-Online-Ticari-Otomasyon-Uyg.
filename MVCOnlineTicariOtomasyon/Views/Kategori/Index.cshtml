@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    body {
        background-color: darkgray
    }
</style>
<br />
<h2>Kategori Listesi</h2>
<table id="tbl2" style="background-color: dimgray" class="table table-bordered">
    <thead>
        <tr>
            <th style="color:white" width="60px" height="4px">ID</th>
            <th style="color:white">Kategori Ad</th>
            <th style="color:white" width="50px">Sil</th>
            <th style="color:white" width="50px">Güncelle</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td style="color:black">
                @x.KATEGORIID
            </td>
            <td style="color:black">
                @x.KATEGORIAD
            </td>
            <td style="color:white"><a href="/Kategori/KategoriSil/@x.KATEGORIID" class="btn btn-danger">Sil</a></td>
            <td style="color:white"><a href="/Kategori/KategoriGetir/@x.KATEGORIID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl2').dataTable();
</script>

